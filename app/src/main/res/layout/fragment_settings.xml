<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zemoso.zestagram.Fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Choose Theme"
              android:textColor="@color/black"
              android:textSize="20sp"
              android:textAlignment="center"
              />
    </android.support.v7.widget.Toolbar>

    <CheckBox
        android:id="@+id/theme_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_theme"
        android:layout_marginTop="12dp"
        android:text="@string/B_and_W" />
    <CheckBox
        android:id="@+id/theme_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/theme_1"
        android:layout_marginTop="12dp"
        android:text="@string/w_and_B" />
    <CheckBox
        android:id="@+id/theme_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/theme_2"
        android:layout_marginTop="12dp"
        android:text="@string/B_and_red" />
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/save"/>
</RelativeLayout>
